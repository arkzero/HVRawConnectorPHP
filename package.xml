<?xml version="1.0"?>
<package version="2.0" xmlns="http://pear.php.net/dtd/package-2.0"
         xmlns:tasks="http://pear.php.net/dtd/tasks-1.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pear.php.net/dtd/tasks-1.0 http://pear.php.net/dtd/tasks-1.0.xsd http://pear.php.net/dtd/package-2.0 http://pear.php.net/dtd/package-2.0.xsd">
    <name>HVRawConnector</name>
    <channel>pear.biologis.com</channel>
    <summary>Simple PHP library to connect to Microsoft HealthVault using raw XML.</summary>
    <description>
        Simple PHP library to connect to Microsoft HealthVault using raw XML.
    </description>

    <lead>
        <name>Markus Kalkbrenner</name>
        <user>mkalkbrenner</user>
        <email>info@bio.logis.de</email>
        <active>yes</active>
    </lead>
    <date>2013-03-18</date>

    <version>
        <release>1.0.1</release>
        <api>1.0.0</api>
    </version>

    <stability>
        <release>stable</release>
        <api>alpha</api>
    </stability>

    <license uri="https://raw.github.com/mkalkbrenner/HVRawConnectorPHP/master/LICENSE.txt">GPLv2</license>
    <notes>
        fixed exceptions
    </notes>

    <contents>
        <dir name="/">
            <file name="CHANGELOG.txt" role="doc" />
            <file name="LICENSE.txt" role="doc" />
            <file name="README.md" role="doc" />
            <file name="HVRawConnector.php" role="php" />
        </dir>
    </contents>

    <dependencies>
        <required>
            <php>
                <min>5.3</min>
                <!-- <max>6.0.0</max> -->
            </php>

            <pearinstaller>
                <min>1.4.0</min>
            </pearinstaller>

            <package>
                <name>Log</name>
                <channel>pear.php.net</channel>
                <min>1.12.7</min>
                <!-- <recommended>1.12.7</recommended> -->
            </package>

            <package>
                <name>Net_URL2</name>
                <channel>pear.php.net</channel>
                <min>2.0.0</min>
                <!-- <recommended>2.0.0</recommended> -->
            </package>

            <package>
                <name>QueryPath</name>
                <channel>pear.querypath.org</channel>
                <min>2.1.0</min>
                <recommended>2.1.2</recommended>
            </package>

            <extension>
                <name>openssl</name>
            </extension>
        </required>

        <optional>
        </optional>

    </dependencies>

    <phprelease>
