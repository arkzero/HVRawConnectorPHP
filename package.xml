    <changelog>
        <release>
            <version>
                <release>1.0.1</release>
                <api>1.0.0</api>
            </version>
            <stability>
                <release>stable</release>
                <api>alpha</api>
            </stability>
            <date>2013-03-18</date>
            <license uri="https://raw.github.com/mkalkbrenner/HVRawConnectorPHP/master/LICENSE.txt">GPLv2</license>
            <notes>
                * fixed exceptions
                * fixed various typos
            </notes>
        </release>
        <release>
            <version>
                <release>1.0.0</release>
                <api>1.0.0</api>
            </version>
            <stability>
                <release>stable</release>
                <api>alpha</api>
            </stability>
            <date>2013-03-14</date>
            <license uri="https://raw.github.com/mkalkbrenner/HVRawConnectorPHP/master/LICENSE.txt">GPLv2</license>
            <notes>
                * first release
            </notes>
        </release>
    </changelog>
</package>
